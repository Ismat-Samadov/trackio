// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  habits    Habit[]
}

model Habit {
  id          String   @id @default(cuid())
  name        String
  description String
  color       String
  icon        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  entries     HabitEntry[]

  @@index([userId])
}

model HabitEntry {
  id        String   @id @default(cuid())
  date      DateTime
  completed Boolean
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  habitId   String
  habit     Habit    @relation(fields: [habitId], references: [id])

  @@index([habitId])
  @@unique([habitId, date])
}